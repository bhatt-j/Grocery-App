<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:backgroundTint="@color/blue_shade1"
    cardCornerRadius="5dp"
    app:cardElevation="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/id_LLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/id_TView_ItemNames"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Items Name"
                android:textColor="@color/white"
                android:padding="4dp"
                android:layout_margin="3dp" />

            <TextView
                android:id="@+id/id_TView_quantity"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quantity"
                android:textColor="@color/white"
                android:padding="4dp"
                android:layout_margin="3dp"
                />

            <TextView
                android:id="@+id/id_TView_rate"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rate"
                android:textColor="@color/white"
                android:padding="4dp"
                android:layout_margin="3dp"
                />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="4dp"
                android:src="@drawable/delete_icon"
                android:layout_weight="1"
                app:tint="@color/white"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/id_TView_TCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Cost"
            android:layout_below="@id/id_LLayout1"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:textColor="@color/white"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:text="Amount"
            android:textColor="@color/white"
            android:layout_below="@id/id_LLayout1"
            android:layout_toLeftOf="@id/id_TView_TCost"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>